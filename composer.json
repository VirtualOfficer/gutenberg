{
	"name": "wordpress/gutenberg",
	"type": "wordpress-plugin",
	"license": "GPL-2.0-or-later",
	"description": "Prototyping since 1440. Development hub for the editor focus in core.",
	"homepage": "https://wordpress.github.io/gutenberg/",
	"keywords": [
		"gutenberg", "wordpress", "editor", "wp", "react", "javascript"
	],
	"support": {
		"issues": "https://github.com/WordPress/gutenberg/issues"
	},
	"require-dev": {
		"dealerdirect/phpcodesniffer-composer-installer": "^0.4.3",
		"squizlabs/php_codesniffer": "^3.1",
		"wimg/php-compatibility": "^8",
		"wp-coding-standards/wpcs": "^0.14.0"
	},
	"require": {
		"composer/installers": "~1.0"
	},
	"scripts": {
		"test": [
			"@lint",
			"@test-unit"
		],
		"test:coverage": [
			"@lint",
			"@test-unit:coverage"
		],
		"test:coverage-ci": [
			"@lint",
			"@test-unit:coverage-ci"
		],

		"phpcs": "phpcs",
		"lint": "docker-compose run --rm composer run-script phpcs",

		"test-unit": "docker-compose run --rm wordpress_phpunit phpunit",
		"test-unit:coverage": "docker-compose run --rm wordpress_phpunit phpunit --coverage-text",
		"test-unit:coverage-html": "docker-compose run --rm wordpress_phpunit phpunit --coverage-html=./coverage/phpunit",
		"test-unit:coverage-ci": [
			"docker-compose run --rm wordpress_phpunit phpunit --coverage-clover=./coverage/phpunit/coverage.xml",
			"curl -s https://codecov.io/bash | bash"
		],
		"test-unit-multisite": "docker-compose run -e WP_MULTISITE=1 --rm wordpress_phpunit phpunit",
		"test-unit-multisite:coverage": "docker-compose run -e WP_MULTISITE=1 --rm wordpress_phpunit phpunit --coverage-text",
		"test-unit-multisite:coverage-html": "docker-compose run -e WP_MULTISITE=1 --rm wordpress_phpunit phpunit --coverage-html=./coverage/phpunit/multisite",
		"test-unit-multisite:coverage-ci": [
			"docker-compose run -e WP_MULTISITE=1 --rm wordpress_phpunit phpunit --coverage-clover=./coverage/phpunit/multisite/coverage.xml",
			"curl -s https://codecov.io/bash | bash"
		]
	}
}
